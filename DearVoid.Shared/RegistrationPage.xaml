<Page
    x:Class="DearVoid.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DearVoid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Margin="20,30" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="UserName"
            Width="120"
            HorizontalAlignment="Center"
            PlaceholderText="User Name"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="UserPassword"
            Grid.Row="1"
            Width="120"
            HorizontalAlignment="Center"
            PlaceholderText="User Password"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="UserAlias"
            Grid.Row="2"
            Width="120"
            HorizontalAlignment="Center"
            PlaceholderText="User Alias"
            TextWrapping="Wrap" />
        <Button
            Grid.Row="3"
            HorizontalAlignment="Center"
            Click="Button_Click"
            Content="Button" />
    </Grid>
</Page>
