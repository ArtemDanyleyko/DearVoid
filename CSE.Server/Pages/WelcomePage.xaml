<Page
    x:Class="DearVoid.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DearVoid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20,30" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            FontSize="20"
            FontWeight="Bold"
            Foreground="Black"
            Text="Hello dear, {0}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            FontSize="17"
            FontWeight="SemiBold"
            Foreground="Black"
            Text="Every 5 minutes you can see new slide on the screen. You are welcome :)"
            TextAlignment="Center"
            TextWrapping="Wrap" />
    </Grid>
</Page>